<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/headIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dip"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <TextView
                android:id="@+id/find_comment_name"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_8290AF"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/find_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/color_8290AF"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/find_content_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.wta.NewCloudApp.jiuwei99986.widget.ExpandTextView
        android:id="@+id/find_content_view"
        android:layout_margin="@dimen/app_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.wta.NewCloudApp.jiuwei99986.widget.ExpandTextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/app_distance"
        android:id="@+id/find_comment_linearLayout"
        android:layout_marginTop="@dimen/app_distance"
        android:layout_height="wrap_content" />

</LinearLayout>