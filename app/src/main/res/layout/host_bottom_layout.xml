<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/host_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/live_page_im"
        android:layout_marginLeft="10dp"
        android:text="跟主播聊点什么"
        android:background="@drawable/login_text_back"
        android:textSize="16sp"
        android:padding="@dimen/h4"
        android:gravity="center"
        android:textColor="@color/appColor"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="30dp" />
    <View
        android:layout_width="@dimen/h30"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/live_page_hide"
        android:onClick="onClick"
        android:background="@drawable/full_screen"
        android:layout_margin="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <View
        android:layout_width="@dimen/h30"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/live_page_close"
        android:background="@drawable/close_live"
        android:layout_margin="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <View
        android:layout_width="@dimen/h30"
        android:layout_height="40dp" />
</LinearLayout>
