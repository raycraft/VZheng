<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.wta.NewCloudApp.jiuwei99986.widget.RoundImageView
    android:layout_width="@dimen/h100"
    app:type="circle"
    app:borderRadius="@dimen/h10"
    android:layout_margin="@dimen/h10"
    android:id="@+id/consult_home_image"
    android:layout_height="@dimen/h100" />

    <RelativeLayout
        android:layout_margin="@dimen/h10"
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
    <!--    <TextView
            android:id="@+id/share"
            android:textSize="12sp"
            android:padding="@dimen/h4"
            android:background="@drawable/text_style"
            android:layout_margin="@dimen/h6"
            android:layout_width="wrap_content"
            android:text="@string/share"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />-->
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/consult_home_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appColor"
            android:textSize="18sp" />
        <TextView
            android:layout_below="@+id/consult_home_number"
            android:layout_gravity="center_vertical"
            android:id="@+id/consult_home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:id="@+id/consult_start"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:text="@string/consult_start"
            android:padding="@dimen/h4"
            android:background="@drawable/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>