<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/h30"
        android:background="@color/white">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/tool_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/find" />

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_half"
        android:layout_marginTop="@dimen/h2"
        android:background="@color/gray_light" />
    <com.wta.NewCloudApp.jiuwei99986.custom.CommonTabLayout
        android:id="@+id/head_common_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h30"
        android:background="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/appColor"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="@dimen/h40"
        tl:tl_textSelectColor="@color/appColor"
        tl:tl_textUnselectColor="@color/black"
        tl:tl_textsize="14sp"></com.wta.NewCloudApp.jiuwei99986.custom.CommonTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_half"
        android:layout_marginTop="@dimen/h2"
        android:background="@color/gray_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>