<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/h10"
        android:gravity="center"
        android:text="@string/share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="@dimen/h50"
            android:layout_height="@dimen/h50"
            android:layout_marginLeft="@dimen/h70"
            android:src="@drawable/umeng_socialize_wechat" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/h1"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/weixin_circle"
            android:layout_width="@dimen/h50"
            android:layout_height="@dimen/h50"
            android:layout_marginRight="@dimen/h70"
            android:src="@drawable/umeng_socialize_wxcircle" />
    </LinearLayout>

</LinearLayout>